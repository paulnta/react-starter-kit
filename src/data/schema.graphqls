type IntlMessage {
    id: String!
    defaultMessage: String!
    message: String
    description: String
    files: [String]
}

type NewsItem {
    title: String!
    link: String!
    author: String
    pubDate: String!
    content: String
}

type Query {
    news: [NewsItem]
    intl(locale: String!): [IntlMessage]
}

schema {
    query: Query
}